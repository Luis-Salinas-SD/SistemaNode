<!doctype html>
<html lang="es">

<%- include('../views/components/heade.ejs') %>

    <body>

        <%- include('../views/components/menu.ejs') %>

            <div class="container">
                <div class="card mt-2">
                    <div class="card-body d-flex align-items-center">
                        <a href="./create" class="btn btn-warning m-2">
                            <i class='bx bxs-plus-circle'></i>
                            <span>Agregar</span>
                        </a>
                    </div>
                </div>
                <!--! Tabla -->
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="responsive-table">
                            <table class="table table-striped">
                                <thead class="bg-warning">
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuario</th>
                                        <th>Rol</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% results.forEach((element)=> { %>
                                        <tr>
                                            <td>
                                                <%= element.id %>
                                            </td>
                                            <td>
                                                <%= element.usuario %>
                                            </td>
                                            <td>
                                                <%= element.rol %>
                                            </td>
                                            <td>
                                                <!-- Edit -->
                                                <a href="/edit/<%= element.id %>" class="btn btn-outline-success"><i
                                                        class='bx bxs-edit'></i><span>Editar</span>
                                                </a>
                                                <!-- Delete -->
                                                <a href="/delete/<%= element.id %>" class="btn btn-outline-danger">
                                                    <i class='bx bx-trash'></i><span>Eliminar</span>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('../views/components/scripts.ejs') %>

    </body>

</html>